<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/Toolbar">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_menu_black_24dp" />
    </android.support.v7.widget.Toolbar>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/task"
                        style="@style/HalfBoldTextStyle"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Правильний наголос в усіх словах рядка: " />

                    <LinearLayout
                        android:id="@+id/answer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/task"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/letter1"
                            style="@style/BoldTextStyle"
                            android:layout_marginEnd="8dp"
                            android:text="A" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Жоржина, машина, картошина" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/answer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/answer1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/letter2"
                            style="@style/BoldTextStyle"
                            android:layout_marginEnd="8dp"
                            android:text="Б" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Бі бо бу" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/answer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/answer2"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/letter3"
                            style="@style/BoldTextStyle"
                            android:layout_marginEnd="8dp"
                            android:text="В" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Труляля, траляля" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/answer4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/answer3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/letter4"
                            style="@style/BoldTextStyle"
                            android:layout_marginEnd="8dp"
                            android:text="Г" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ЖОПА" />
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view"
                android:layout_marginLeft="16dp"
                android:orientation="horizontal">

                <RadioButton
                    style="@style/BoldTextStyle"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/radiobutton_selector"
                    android:gravity="center"
                    android:text="А" />


                <RadioButton
                    style="@style/BoldTextStyle"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/radiobutton_selector"
                    android:gravity="center"
                    android:text="Б" />

                <RadioButton
                    style="@style/BoldTextStyle"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/radiobutton_selector"
                    android:gravity="center"
                    android:text="В" />

                <RadioButton
                    style="@style/BoldTextStyle"
                    android:layout_weight="1"
                    android:button="@null"
                    android:drawableBottom="@drawable/radiobutton_selector"
                    android:gravity="center"
                    android:text="Г" />
            </RadioGroup>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_view"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_keyboard_arrow_left_white_24dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:src="@drawable/ic_keyboard_arrow_right_white_24dp" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>